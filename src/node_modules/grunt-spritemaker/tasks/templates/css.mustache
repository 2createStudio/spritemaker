{{#details}}
[class^="{{ details.prefix }}"] { background-image: url({{{ details.escaped_image }}}); background-repeat: no-repeat; }
{{/details}}

{{#items}}
{{class}} { width: {{px.width}}; height: {{px.height}}; background-position: {{px.offset_x}} {{px.offset_y}}; }
{{/items}}

{{#details.is_retina}}
@media
	only screen and (-webkit-min-device-pixel-ratio: 2),
	only screen and (   min--moz-device-pixel-ratio: 2),
	only screen and (     -o-min-device-pixel-ratio: 2/1),
	only screen and (        min-device-pixel-ratio: 2),
	only screen and (                min-resolution: 192dpi),
	only screen and (                min-resolution: 2dppx)  
{
	[class^="{{ details.prefix }}"] { background-image: url({{{ details.hd_path }}}); background-repeat: no-repeat; background-size: {{{ details.half_total_width }}}px {{{ details.half_total_height }}}px; }
}
{{/details.is_retina}}
